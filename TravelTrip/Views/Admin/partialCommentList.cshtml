@using TravelTrip.Models.Siniflar
@model List<Yorumlar>

<section class="gallery-section section parallax-window" data-parallax="scroll" id="section-2">
    <div class="container">
        <div class="title text-right">
            <h2>Yorumlar</h2>
        </div>
        <div class="mx-auto gallery-slider">
            <table class="table table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Kullanıcı</th>
                    <th>Mail</th>
                    <th>Yorum</th>
                    <th>Blog</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.UserName</td>
                        <td>@item.Mail</td>
                        <td>@item.Comment</td>
                        <td>@item.Blog.Header</td>
                        <td><a href="/Admin/BringComment/@item.ID" class="btn btn-outline-warning">Güncelle</a></td>
                        <td><a href="/Admin/DeleteComment/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                        
                    </tr>
                }

            </table>

        </div>
    </div>
</section>